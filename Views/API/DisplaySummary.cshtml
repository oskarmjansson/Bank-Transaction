@{
    ViewData["Title"] = "DisplaySummary";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f0f0f0;
    }

    h1 {
        color: #333;
        text-align: center;
        padding: 20px 0;
    }

    h3 {
        color: #666;
        text-align: center;
        padding: 10px 0;
    }

    h5 {
        color: #444;
        padding: 10px 0;
    }

    h7 {
        display: block;
        color: #888;
        padding: 5px 0;
    }

    p {
        color: #555;
        padding: 5px 0;
    }

    a {
        color: #0066cc;
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
    }

    th {
        background-color: #f2f2f2;
        color: black;
    }
</style>

@Html.ActionLink("Go to homepage", "Index");
@Html.ActionLink("View Transactions", "DisplayTransactions");

<h1>DisplaySummary</h1>
<h3>Summering av alla transaktioner</h3>

<h7>Inkomster: @Model.Element("PositiveSum").Value</h7>
<h7>Utgifter: @Model.Element("NegativeSum").Value</h7>

<h3>Summering efter kategorier</h3>

<table>
    <tr>
        <th>Kategori</th>
        <th>Inkomst</th>
        <th>Utgifter</th>
    </tr>
    @foreach (var element in Model.Elements())
    {
        if (element.Name != "PositiveSum" && element.Name != "NegativeSum")
        {
            <tr>
                <td>@element.Name</td>
                <td>@element.Element("Positive").Value</td>
                <td>@element.Element("Negative").Value</td>
            </tr>
        }
    }
</table>